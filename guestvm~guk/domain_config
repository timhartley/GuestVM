# Kernel image file.
kernel = "guk.gz"

# Initial memory allocation (in megabytes) for the new domain.
memory = 32
maxmem = 128

vcpus = 1

#if os.environ.get("BRIDGE") != None :
#    vif=['bridge=' + os.environ.get("BRIDGE")]

# A name for your domain. All domains must have different names.
name = "GUK-MAXINE"

on_crash = 'destroy'
